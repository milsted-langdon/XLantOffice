@model XLantCore.Models.MLFSIncome

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateClawback">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReportingPeriodId" class="control-label"></label>
                <select asp-for="ReportingPeriodId" class="form-control" asp-items="ViewBag.ReportingPeriodId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AdvisorId" class="control-label">Advisor</label>
                <select asp-for="AdvisorId" class="form-control" asp-items="ViewBag.AdvisorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label"></label>
                <input asp-for="ClientName" class="form-control" />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RelevantDate" class="control-label"></label>
                <input asp-for="RelevantDate" class="form-control" />
                <span asp-validation-for="RelevantDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IgnoreFromCommission" class="control-label"></label>
                <input asp-for="IgnoreFromCommission" class="form-control" />
                <span asp-validation-for="IgnoreFromCommission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
