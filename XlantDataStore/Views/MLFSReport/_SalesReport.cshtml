@model IEnumerable<XLantDataStore.ViewModels.SalesReport>

@{
    ViewData["Title"] = "Sales' Report";
}

        <table class="table salesTable" style="width:100%">
            <thead>
                <tr>
                    <th>
                        
                    </th>
                    <th class="columnTotal">
                        @Html.DisplayNameFor(model => model.New_Business)
                    </th>
                    <th class="columnTotal">
                        @Html.DisplayNameFor(model => model.Unallocated)
                    </th>
                    <th class="columnTotal">
                        @Html.DisplayNameFor(model => model.Renewals)
                    </th>
                    <th class="columnTotal">
                        @Html.DisplayNameFor(model => model.Clawback)
                    </th>
                    <th class="columnTotal">
                        @Html.DisplayNameFor(model => model.NotTakenUp)
                    </th>
                    <th class="columnTotal">
                        @Html.DisplayNameFor(model => model.Adjustment)
                    </th>
                    <th class="columnTotal">
                        @Html.DisplayNameFor(model => model.Debtors_Variance)
                    </th>
                    <th class="columnTotal">
                        @Html.DisplayNameFor(model => model.Debtors_Adjustment)
                    </th>
                    <th class="columnTotal">
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    <th class="columnTotal">
                        @Html.DisplayNameFor(model => model.Budget)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Advisor)
                    </td>
                    <td align="right">
                        <a target="_blank" asp-controller="MLFSSale" asp-action="Index" asp-route-periodId="@item.PeriodId" asp-route-advisorId="@item.AdvisorId">@Html.DisplayFor(modelItem => item.New_Business)</a>
                    </td>
                    <td align="right">
                        <a target="_blank" asp-controller="MLFSIncome" asp-action="Index" asp-route-periodId="@item.PeriodId" asp-route-split="Unallocated" asp-route-advisorId="@item.AdvisorId">@Html.DisplayFor(modelItem => item.Unallocated)</a>
                    </td>
                    <td align="right">
                        <a target="_blank" asp-controller="MLFSIncome" asp-action="Index" asp-route-periodId="@item.PeriodId" asp-route-split="Recurring" asp-route-advisorId="@item.AdvisorId">@Html.DisplayFor(modelItem => item.Renewals)</a>
                    </td>
                    <td align="right">
                        <a target="_blank" asp-controller="MLFSIncome" asp-action="Index" asp-route-periodId="@item.PeriodId" asp-route-split="clawback" asp-route-advisorId="@item.AdvisorId">@Html.DisplayFor(modelItem => item.Clawback)</a>
                    </td>
                    <td align="right">
                        <a target="_blank" asp-controller="MLFSDebtorAdjustments" asp-action="Index" asp-route-periodId="@item.PeriodId" asp-route-split="ntu" asp-route-advisorId="@item.AdvisorId">@Html.DisplayFor(modelItem => item.NotTakenUp)</a>
                    </td>
                    <td align="right">
                        <a target="_blank" asp-controller="MLFSIncome" asp-action="Index" asp-route-periodId="@item.PeriodId" asp-route-split="adjustment" asp-route-advisorId="@item.AdvisorId">@Html.DisplayFor(modelItem => item.Adjustment)</a>
                    </td>
                    <td align="right">
                        <a target="_blank" asp-controller="MLFSDebtorAdjustments" asp-action="Index" asp-route-periodId="@item.PeriodId" asp-route-split="variance" asp-route-advisorId="@item.AdvisorId">@Html.DisplayFor(modelItem => item.Debtors_Variance)</a>
                    </td>
                    <td align="right">
                        <a target="_blank" asp-controller="MLFSDebtorAdjustments" asp-action="Index" asp-route-periodId="@item.PeriodId" asp-route-split="adjustment" asp-route-advisorId="@item.AdvisorId">@Html.DisplayFor(modelItem => item.Debtors_Adjustment)</a>
                    </td>
                    <td align="right">
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td align="right">
                        @Html.DisplayFor(modelItem => item.Budget)
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td align="right"></td>
                    <td align="right"></td>
                    <td align="right"></td>
                    <td align="right"></td>
                    <td align="right"></td>
                    <td align="right"></td>
                    <td align="right"></td>
                    <td align="right"></td>
                    <td align="right"></td>
                    <td align="right"></td>
                    <td align="right"></td>
                </tr>
            </tfoot>
        </table>
    